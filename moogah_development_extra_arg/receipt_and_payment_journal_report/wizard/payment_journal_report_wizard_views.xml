<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_payment_journal_report_wizard" model="ir.ui.view">
            <field name="name">Payment Journal Wizard</field>
            <field name="model">payment.journal.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="payment_no"/>
                        </group>
                    </group>
                    <group col="2">
                        <field name="journal_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                    </group>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create_edit': True}"/>
                            <field name="reference"/>
                            <separator colspan="2" string="Status"/>
                            <field name="draft"/>
                            <field name="confirmed"/>
                            <field name="posted"/>
                        </group>
                        <group>
                            <field name="analytic_tag_id" options="{'no_create_edit': True}"/>
                            <field name="detail_level"/>
                        </group>
                    </group>
                    <footer>
                        <button name="%(action_payment_journal_report)d"
                                type="action" class="btn-primary" string="Open"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_payment_journal_report_wizard" model="ir.actions.act_window">
            <field name="name">Payment Journal Wizard</field>
            <field name="res_model">payment.journal.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_payment_journal_report_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_payment_journal_report_wizard" name="Payment Journal"
                  action="action_payment_journal_report_wizard" sequence="4"
                  parent="detailed_general_ledger_report.account_reports_argentinean_legal_menu"/>

    </data>
</odoo>
